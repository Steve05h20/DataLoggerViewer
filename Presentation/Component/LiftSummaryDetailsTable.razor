@namespace DataLoggerViewer.Presentation.Component
@using DataLoggerViewer.Presentation.ViewModels



<section class="w-full">

<section class="flex flex-row items-center gap-4">

    <div class="stats shadow stats-vertical  my-4 bg-white basis-1/3">

        @foreach (var item in Details.SummariesTimeDetails)
        {
            <div class="stat">
                <div class="stat-title font-medium">@item.Key</div>
                <div class="stat-value text-lg font-semibold">@item.Value</div>
            </div>
        }
    </div>


<div class="w-full bg-white  p-6 rounded-xl shadow basis-2/3">
    <!-- Chart container -->
    <div class=" w-full h-66 flex items-end justify-between gap-4 border-b border-l border-gray-200 relative">

        <!-- Grid horizontal -->
        <div class="absolute inset-0 flex flex-col justify-between pointer-events-none">
            @foreach (var item in Details.LiftBuckets)
            {
                <div class="border-t border-dashed border-gray-200"></div>
            }
        </div>
        
        @foreach (var item in Details.LiftBuckets)
        {
            <!-- Bars -->
            <div class="flex flex-col items-center gap-2 z-10">
                <div class="w-6 bg-base-content rounded-sm" style="height:@(item.Value * 24)px"></div>
                <span class=" font-medium text-base-content">@item.Key</span>
            </div>
        }
    </div>
</div>

</section>

<div class="stats shadow h-26 w-full bg-white ">
    @foreach (var item in Details.SummariesDetails)
    {
        <div class="stat">
            <div class="stat-title text-lg font-normal">@item.Key</div>
            <div class="stat-value text-base-content text-3xl font-mono">@item.Value</div>
        </div>
    }
</div>





</section>






@code {
    [Parameter, EditorRequired]
    public LiftSummariesDetailViewModel Details { get; set; } = default!;
}